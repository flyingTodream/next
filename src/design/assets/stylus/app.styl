.design-resource-text__list
    display flex
    flex-wrap: wrap
    justify-content: space-around;
    li
        padding: 6px
.design-resource-text__list__item
    
    border-radius: 4px;
    background: #f8fafc;
    cursor: pointer;
    user-select: none;
    box-sizing: border-box;
    transition: border-color .1s ease-in-out;
    border: 1px solid #dcdbdb;
    padding: 6px;
    width: 130px;
    height: 140px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: 100% 100%;
