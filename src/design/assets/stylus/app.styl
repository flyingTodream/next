        &:active
            opacity .9

.design-resource-templet__list
    display flex
    flex-wrap: wrap
.design-resource-templet__list__item
    padding: 5px
    width 50%

.design-resource-templet__list__item__preview
    border-radius: 4px
    overflow hidden
    position relative
    cursor pointer
    width 100%
    height 238px
    display: flex;
    align-items: center;
    justify-content: center;
    img
        max-width 100%
        max-height 100%
        
    &:hover 
        &::before
            content: ""
            background-color: rgba(#000, .2)
            position: absolute
            top 0
            left 0
            right 0
            bottom 0
.design-resource-templet__list__item__preview__buttons
    position absolute
    top .5rem
    right 0.5rem

.design-resource-text
    .design-resource__label
        h2
            padding-left: 0
.design-resource-text__button
    padding: 1rem 1.2rem
    button
        display: block;
        padding: 12px;
        font-size: 15px;
        color: #2354f4;
        background-color: #ecf3ff;
        border: 1px solid #d3dffd;
        border-radius: 4px;
        width: 100%;
        cursor: pointer;
        outline: none
        &:hover
            opacity: .8
        &:active
