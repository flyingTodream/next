        max-height: 100%;

.design-resource-text__list__item__preview
    display: block;
    max-width: 100%;
    max-height: 100%;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: 50%;
    text-align: center;
.design-resource-element-list
    display: block;
    ul
        display: flex;
        flex-wrap: wrap
        flex-direction: row;
        
        li
            width 6rem
            height 6.2rem
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 4px;
            margin-left 1rem
            margin-top 1rem
            &:hover
                background #e5e5e5
                transition: .5s;
            img
                max-width 100%
                max-height 100%
            .design-resource-element-item{
                width 6rem
                height 6.2rem
                display flex
                align-items center
                justify-content center
            }
.reset-bg
    float: right 
    color: #777
    font-size: .8rem
    line-height: 1.7rem
    cursor pointer
    user-select: none
.design-resource-bg__category
    // padding 1rem 1rem 0
    margin-bottom 2rem
.design-resource-bg__list
    justify-content: space-around;
    display: flex;
    flex-wrap: wrap;
    margin: 0 -2px;
    position: relative;
.design-resource-bg__list__item
    width 150px
    // height 88px
    display: flex;
    align-items: center;
    justify-content: center;
    img{
        max-width: 100%;
        max-height: 100%;
    }
        
.design-resource-bg__item
    padding: 2px;
.design-resource-bg__item__color
    box-sizing: border-box;
    width: 42px;
    height: 35px;
    border-radius: 2px;
    cursor: pointer;
    position: relative;
.design-resource-bg__item__color--bg
    background-image: url("data:image/png;base64,");
    background-position center
.design-resource-bg__item__color
    border: 1px solid #e0e5ea;
.design-resource-bg__item__bg-img
    background-image: linear-gradient(to top right,#ccc 25%,transparent 0,transparent 75%,#ccc 0,#ccc),linear-gradient(to top right,#ccc 25%,transparent 0,transparent 75%,#ccc 0,#ccc);
    background-size 12px 12px
    background-position 0 0, 6px 6px
.design-resource-bg__item__panel
    border: 1px solid #e0e5ea;
    background-color: #f0f6ff;
    text-align center
    .bg-color-add
        line-height 36px
        color #999
    &:hover
        .bg-color-add
            color #3462f4

.design-resource-bg__list__item
    cursor pointer
    padding 2px
.design-resource-bg__list__item-hover
    position relative
.design-resource-bg__list__item-hover:before 
    content: "";
    position: absolute;
    left: 2px;
    top: 2px;
    width: 150px;
    background-color: rgba(0,0,0,.1);
    z-index: 1;
    opacity: 0;
    transition: opacity .2s ease-out;
    border-radius: 2px;
.design-resource-bg__list__item-hover:hover:before
    display: block;
    opacity: 1;
.design-resource-bg__list__item__image 
  
    border-radius: 2px;
    cursor: pointer;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;   


.design-canvas
    background-color #fff
    box-shadow: 0 0 10px #ccc
    background-color #ffffff
    background-size 12px 12px
    background-position 0 0, 6px 6px
    background-image linear-gradient(to top right,#ccc 25%,transparent 0,transparent 75%,#ccc 0,#ccc),linear-gradient(to top right,#ccc 25%,transparent 0,transparent 75%,#ccc 0,#ccc)

@media only all and (max-height:720px)
    .design-result ul
        li >i span
            display: none
        li:hover
            >i span
                position absolute
                display inline-block
                top 50%
                left 4rem
                background-color: rgba(#000, .7)
                color: #ffffff
                z-index 100
                transform: translateY(-50%)
                padding: 0 .5rem;
                border-radius: 4px
                line-height: 1.7rem
                font-size: 1rem
                width max-content
                &::before
                    content: ""
                    display: inline-block
                    position: absolute
                    top: 50%
                    transform: translateY(-50%)
                    left -5px
                    // border 5px solid rgba(#000, .7)
                    // border-bottom-color:  transparent
                    border-color: transparent #4b4b4b transparent transparent;
                    border-width: 5px 5px 5px 0;
                    border-style: solid;

// 提示
/**用法
<div class="btn-tip" aria-label="示例"></div>
**/
.btn-tip
    position relative
    &:hover
        &::before
            z-index 20
            content ''
            position absolute
            top 120%
            left 50%
            transform translateX(-50%)
            border-color: transparent transparent #000000b3 transparent;
            border-width: 0 5px 5px 5px;
            border-style: solid;
        &::after
            content attr(aria-label)
            position absolute
            color #ffffff
            background-color #000000b3
            z-index 10
            top 120%
            margin-top 5px
            font-size: .8em;
            padding: 5px 8px;
            text-align: center;
            word-wrap: break-word;
            white-space: pre;
            border-radius 5px
            left 50%
            line-height: 1rem
            transform translateX(-50%)

