// base layout
#design-app
    width 100vw
    height 100vh
    display flex
    flex-direction column
    overflow hidden

.design-main
    flex 1
    display flex
    height 100%
    .design-result
        width 5rem
        min-width 5rem
        position relative
        display inline-flex
        flex-direction column
        height auto
        min-height max-content
        &.is-show .res-panel
            width calc(22rem + 1px)
    .main-container
        flex: 1
        display: flex
        flex-direction: column
        height 100%
        background-color: #f5f5f5;
        overflow hidden
    .editor-tip-bar
        width 100%
        z-index 4
    .design-container
        flex 1
        height 100%
        overflow: auto
        position relative
        display: flex;
        justify-content: center;
        align-items: center;
        &.preview
            background: none
            .design-canvas
                box-shadow: none
                .editor-canvas
                    border: 1px dashed;
.print
    position: absolute
    top: 100%

.vx-once-tooltip 
    position: absolute
    top 50%
    left 6rem
    transform: translateY(-50%)
    width: 14rem
    background-color: #222
    color: #fff
    padding: 1rem
    z-index 4000
    p
        margin-bottom: 1rem
    .el-button
        float: right
    &::before
        content: ""
        display: inline-block
        position: absolute
        top: 50%
        transform: translateY(-50%)
        left -1rem
        border-color: transparent #222 transparent transparent;
        border-width: 1rem 1rem 1rem 0;
        border-style: solid;

// 资源列表
.res-list
    flex 1
.design-result>ul
    color: #666;
    li
        text-align center
        cursor pointer
        padding 1rem 0
        user-select none
        position relative
        >i 
            display block
            position relative
            .vx
                display block
                width 2rem
                height 2rem
                margin 0 auto
            &:after
                content ''
                display none
                position absolute
                top 0
                left 0
                width 4px
                height 100%
                background-color #409EFF
                border-radius 4px
        &:hover >i::after
            display block
        &.active
                i::after
                    display block
.res-panel
    position absolute
    width 0
    height 100%
    background-color #fff
    border-left 1px solid #eee
    top 0
    left 5rem
    transition width .3s cubic-bezier(0,0,.37,1)
    overflow: hidden
    z-index 10
    .panel
        width 22rem;
        height 100%;
        .design-resource
            height 100%
            width 100%
            display flex
            flex-direction column
            .design-resource__content
                flex 1
                display flex
                flex-direction column
                overflow hidden
.design-resource__scroll__content
    overflow-y: auto
    overflow-x: hidden;
.design-resource__scroll__waterfall
  display: flex;
  flex-direction: row;
  ul 
    flex: 1;
    width: 9.375rem;
    li 
      width: 100%;
      cursor: pointer;
      img 
        width: 100%;
        height: 100%;
        border-radius: 4px;
  

.design-resource__label
    position relative
    padding 1rem
    border-bottom 1px solid #eee
    .vx
        width 1.7rem
        height 1.7rem
        position: absolute
        cursor pointer
        &:hover
            color #409eff
    h2
        line-height: 1.7rem
        font-size: 1.2rem
        padding-left: 2rem
        display: inline-block


.design-resource-templet__input__search
    width 80%
    left 0
    margin 1rem 10%
.design-resource-templet__text__button
    padding: 1rem 1.2rem
    button
        display: block;
        padding: 12px;
        font-size: 15px;
        color: #2354f4;
        background-color: #ecf3ff;
        border: 1px solid #d3dffd;
        border-radius: 4px;
        width: 100%;
        cursor: pointer;
        outline: none
        &:hover
