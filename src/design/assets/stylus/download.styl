.vx-download
    width 24.8rem
    background #fff
    box-shadow 0 16px 32px 2px rgba(0,0,0,.1)
    padding-bottom 10px
    color #000
    border-radius 6px
    position absolute
    top 54px
    right 0
    z-index 100
    display flex
    flex-direction column
    align-items center
    .vx-download-title
        width 20rem
        justify-content space-between
        display flex
        height 3rem
        line-height 3rem
        align-items center
        font-size 1.1rem
        cursor pointer
        i
            font-weight 600
            &:hover
                color: #5cb6ff
    .vx-download-fileType
        width 20rem
        .vx-download-fileType-text
            line-height 2rem
        div
            .el-select
                width 100%
        .vx-download-watermark
            display flex
            flex-direction column
            .el-radio
                line-height 3rem
                .el-radio__label
                    span
                        color red
                        font-size .9rem
        .vx-download-download
            background-color #409EFF
            border-color #409EFF
            color #fff
            font-weight 700
            line-height 3rem
            display flex
            justify-content center
            border-radius 4px
            margin-top 1rem
            cursor pointer
        .vx-download-download-phone
            cursor pointer
            color #333
            font-weight 700
            line-height 3rem
            display flex
            justify-content center
            border-radius 4px
            margin-top 1rem
        .vx-download-tips
            background #eff9f2
            border-radius 4px
            font-size .9rem
            line-height 2
            padding 1rem 1rem
            a
                text-decoration underline
                cursor pointer
.vx-download-fileType-option
    display flex
    flex-direction column
    height 4rem
    div
        font-size 1.1rem
    .vx-download-fileType-type-label
        font-size .9rem
        line-height 1rem
        color #8492a6
    .vx-download-fileType-type-label
        font-size .9rem
        font-weight 400
.vx-download-loading
    padding-left .8rem
.vx-share
    width 22rem
    height 20rem
    background #fff
    box-shadow 0 16px 32px 2px rgba(0,0,0,.1)
    padding-bottom 10px
    color #000
    border-radius 6px
    position absolute
    top 54px
    right 0
    z-index 100
    display flex
    flex-direction column
    align-items center
    .vx-share-title
        width 20rem
        justify-content space-between
        display flex
        height: 60px;
        line-height 3rem
        align-items center
        font-size 1.1rem
        cursor pointer
        span
            margin auto
            font-weight: 600;
            font-size: 1.2rem;
        i
            font-weight 600
            &:hover
                color: #5cb6ff;
    .vx-share-qrcode
        width 100%
        display: flex;
        justify-content: center;
        .code
            display: flex;
            justify-content: center;
            align-items: center;
    .vx-share-link
        width 100%
        display: flex;
        flex-direction: row;
        padding: 10px 10px;
        line-height: 35px;
        justify-content: center;
        .vx-share-link-text
            color: #666;
            border: 1px solid #409eff;
            border-radius: 4px 0 0 4px;
            border-right: none;
            padding: 0 12px;
            width: 150px;
            overflow: hidden;
        .vx-share-link-btn
            cursor pointer
            color #fff
            background-color #409eff
            width: 80px;
            text-align: center;
            font-weight 600
            border-radius: 0 4px 4px 0;
