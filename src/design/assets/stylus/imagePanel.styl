.image-bar
    padding 2rem 2rem
    display flex
    flex-direction row
    justify-content space-between
    .image-locked
        .vx
            color #e44
    .vx 
        width 2rem
        height 2rem
        cursor pointer
        color #6c788c
.image-changeimg
    
    height 8rem
    padding 2rem 2rem
    .el-upload
        
        .el-button--small
            padding: 1.5rem 6.3rem
        .el-button--primary
            color: #444950;
            background-color: #fff;
            border-color: #e0e5ea;
            &:active
                opacity .6
    .image-upload
        cursor pointer
        position relative
        display inline-block
        background #FFF
        border 1px solid #b3cfff
        border-radius 4px
        width 100%
        height 100%
        text-align center
        overflow hidden
        color #0467ff
        text-decoration none
        text-indent 0
        line-height 4rem
        &:active
            opacity .6
.image-panel
    padding 1rem 2rem
    .image-panel-hover
        &:active
            opacity .6
        display flex
        padding 0 1rem
        border 1px solid #e0e5ea
        height 6rem
        line-height 6rem
        justify-content space-between
        cursor pointer
        font-size 1.5rem
        color #444950
        .image-panel-icon    
            &::after
                content ""
                display inline-block
                margin-top .6rem
                border-left 5px solid transparent
                border-right 5px solid transparent
                border-top 5px solid #666
        .image-preview
            width 90px
            background-size: 100% 100%;
            background-repeat: no-repeat;
    .image-popup
        display block
        width 29rem
        height 30rem
        background #fff
        position fixed
        right 2rem
        z-index 10
        overflow: auto
        border-radius 4px
        border 1px solid #e0e5ea
        ul  
            display flex
            padding .5rem 1rem
            height auto
            word-breakb break-all
            word-wrap break-word 
            flex-wrap: wrap
            overflow-x none
            li 
                width 8rem
                height 6rem
                line-height 6rem
                text-align center
                margin: 0 10px 14px 0
                border 1px solid #e0e5ea
                border-radius 4px
                cursor pointer
                background-size: 100% 100%;
                background-repeat: no-repeat;
                &:hover
                    border-color #2354f4
            .image-popup-selected
                border-color #2354f4
.image-group
    padding 1rem 2rem
    
    div
        height 4rem
        line-height 4rem
        border 1px solid #dfe3ed
        cursor pointer
        text-align center
    .vx
        color #0467ff
        width 1.5rem
        height 1.5rem
        line-height 4rem
    .image-row-1
        border-bottom none
        display: flex;
        justify-content: center;
        &:active
            opacity .6
        i
            display: flex;
            align-items: center;
    .btn-tip
        &:after
            height: 30px;
            line-height: 20px;
    .image-row-2
        border none
        &:active
            opacity .6
        div
            display: flex;
            justify-content: center;
            i
                display: flex;
                align-items: center;
    .image-row-3
        display flex
        border-top none
        span 
            flex 1
            text-align center
            width 100%
            &:active
                opacity .6
        .image-row-3-span
            border-right 1px solid #dfe3ed
    .el-tooltip
        display: flex;
        justify-content: center;
        align-items: center;
.image-range-picker
    padding 1rem 2rem
    .image-range-input
        padding 0 1rem
        height 3rem
        line-height 3rem
        display flex
        border-radius 4px
        border 1px solid #dfe3ed
        font-size .9rem
        .image-range-value    
            flex 1
            height 3rem
            width 6rem
            text-align center
        .image-range-lable
            flex 1
        .image-range
            flex 2
            div
            .el-slider__runway
                .el-slider__button-wrapper
                    z-index 1
.image-disable
    pointer-events none
    cursor no-drop
    opacity .3


.editor-image-cut
    cursor move
    position absolute
    z-index 2
    &::before, &::after
        content: "";
        box-sizing: border-box;
        border: 1px solid #fff;
        cursor: move;
        height: 100%;
        width: 100%;
        position: absolute;
        left: 0;
        top: 0;
        z-index: 1;
    &::after
        border 1px dashed #666
    .editor-image-cut-mask
        background-repeat: no-repeat;
        background-size: 100% 100%;
        height: 100%;
        width: 100%;
        position: absolute;
        left: 0;
        top: 0;
        z-index: 1;
        opacity: .5;
    .editor-image-cut-inner
        background-repeat no-repeat
        position absolute
        z-index 2
        overflow hidden
        
.editor-image-cut-grid
    display none
    overflow: hidden;
    box-sizing: border-box;
    border: 1px solid #000;
    height: 100%;
    width: 100%;
    position: absolute;
    left: 0;
    top: 0;
    &.active
        display block
    i
        border: 0 solid rgba(0,0,0,.3);
        position: absolute;
        &[class^=editor-cut-grid-x]
            border-left-width: 1px;
            height: 100%;
            width: 0;
        &[class^=editor-cut-grid-y]
            border-top-width: 1px;
            width: 100%;
            height: 0;
        &.editor-cut-grid-x1
            left: 33.3332%;
        &.editor-cut-grid-x2
            left: 66.6664%;
        &.editor-cut-grid-y1
            top: 33.3332%;
        &.editor-cut-grid-y2
            top: 66.6664%;


.editor-toolbar
    position absolute
    background #fff;
    // width 200px
    // height 30px
    box-shadow 0 0 5px #ccc
    border-radius 5px
    z-index 10
    .editor-toolbar-content
        width 100%
        height 100%
        display flex
        padding 2px 3px
        line-height 2rem
        color #666
.editor-toolbar__label
    width 3rem
    cursor default
    user-select none
    text-align center
    
.editor-toolbar__zoom
    position relative
    flex 1
    width 150px
    padding 0 5px
    &::after
        position absolute
        right 0
        top 50%
        transform translateY(-50%)
        content ''
        display block
        width 0
        height 1rem
        border-left 1px solid #ccc
    .el-slider__runway
        margin 11px 0
.editor-toolbar__ok
    width 2rem
    text-align center
    cursor default
.editor-toolbar__cancel
    width 2rem
    text-align center
    cursor default
    