
.background-tips
    height 3rem
    line-height 3rem
    padding 2rem 2rem
    flex-direction row
    display flex
    align-items:center
    color #939ba6
    justify-content space-between
    .background-back
        cursor pointer
        &:hover
            color: #505050;
.background-color-pick
    height 6rem
    padding 0rem 2rem
    flex-direction row
    display flex
    align-items:center
    .background-color-panel
        display flex
        flex-direction column
        height 7rem
        border-radius 4px
        border 1px solid #e0e5ea
        padding 0 3rem
        .vx-color-picker
            padding 0 2rem
            .vx-color-select
                .vc-sketch
                    left: -3rem;
                    position absolute
        &:hove
            border-color #c6cad5
        .background-color-panel-lable
            line-height 3rem
            color #444950
            font-weight 500
            width 10rem
            text-align left
        .el-color-picker__color
            width 10rem
            height 2rem
            display flex
            background #95d1c5
            border-radius 4px
            cursor pointer
            &:hover
                border 1px solid #e0e5ea
        .el-color-picker__trigger
            border none
.background-upload-image
    z-index: 1;
    padding 1rem 2rem
    flex-direction row
    display flex
    align-items:center
    .background-upload
        z-index 1
        cursor pointer
        position relative
        display inline-block
        background #FFF
        border 1px solid #c6cad5
        border-radius 4px
        width 100%
        height 100%
        text-align center
        overflow hidden
        color #000
        text-decoration none
        text-indent 0
        line-height 4rem
        &:active
            opacity .6
.background-color-image
    border-radius: 4px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    .background-color-image-src
        background-color: #f8fafc;
        overflow: hidden;
        position: relative;
        border: 1px solid #dfe3ed;
        width: 16rem;
        height: 10rem;
        display: flex;
        justify-content: center;
        align-items: center;
        div
            height: max-content
            width: max-content;
            display: flex;
        img
            max-width: 100%;
            max-height: 100%;
    .background-color-image-color
        width: 16rem;
        background: #fff;
        height: 18rem;
        border-radius: 4px;
        border: 1px solid #cecccc;
        position: absolute;
        right: 1rem;
