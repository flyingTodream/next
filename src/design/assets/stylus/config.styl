.design-config
    overflow-y: auto;
    height: 100%;
    width 20rem
    min-width 20rem
    user-select none
    display flex
    flex-direction column
    .config-tips
        height 3rem
        line-height 3rem
        padding 0 2rem
        flex-direction row
        display flex
        align-items:center
        justify-content space-between
        .config-size
            color #939ba6
        .config-edit
            color #409eff
            cursor pointer
            &:active
                opacity .6

    .config-view
        flex-direction row
        display flex
        padding 0 2rem
        justify-content space-between
        &:active
            opacity .6
        div
            width 7.7rem
            height 3rem
            line-height 3rem
            text-align center
            border 1px solid #e0e5ea
            cursor pointer
            background #fff
            border-radius 4px
        .config-width
            /* text-align left */
            .config-width-value
                padding 0 .5rem
            .config-width-label
                color #a0a0a0
                font-size .9rem
        .config-height
            /* text-align right */
            .config-heigth-value
                padding 0 .5rem
            .config-heigth-label
                color #a0a0a0
                font-size .9rem
    .config-dialog
        z-index 2014
        position fixed
        top 0
        right 0
        bottom 0
        left 0
        background-color rgba(0,0,0,0.7)
        display flex
        .config-dialog-main
            background #fff
            align-items:center
            justify-content space-between
            min-width 60rem
            width 70rem
            height 34rem
            min-height 36rem
            position fixed
            top 0px
            left 0px
            right 0px
            bottom 0px
            margin auto
            display flex
            .config-dialog-canvas
                min-width 40rem
                width 40rem
                background #000
                height 36rem
                min-height 36rem
            .config-dialog-aside
                min-width 30rem
                width 30rem
                height 36rem
                min-height 36rem
                background #fff
                display flex
                padding 1rem 3rem
                flex-direction column
                .config-title 
                    width 100%
                    height 4rem
                    line-height 4rem
                    display flex
                .config-dialog-title
                    font-weight 400
                    font-size 1.2rem
                    flex 20
                .config-dialog-close
                    flex 1
                    .el-icon-close
                        color #aaa
                        cursor pointer
                        font-weight 600
                        &:hover
                            color #666
                .config-dialog-select
                    width 100%
                    height 12.5rem   
                    ul 
                        border 1px solid #dadde1
                        border-radius 4px
                        overflow: auto
                        height 11.5rem   
                        li
                            padding .2rem 1.2rem
                            line-height 2.5rem
                            cursor pointer
                            font-size .9rem
                            flex-direction row
                            color #606266
                            display flex
                            .config-select-lable
                                flex 5
                            div    
                                flex 1
                        .config-dialog-selected
                            background #f0f3f4
                            color #409eff
                .config-dialog-action
                    flex-direction row
                    display flex
                    align-items:center
                    justify-content space-between
                    input   
                        width 7.3rem
                        height 3.5rem
                        background-color transparent
                        border 1px solid #dadde1
                        text-align center
                        border-radius 4px
                    .vx
                        width 1.5rem
                        height 1.5rem
                        color #333
                        cursor pointer
                .config-dialog-info
                    height 4rem
                    line-height 4rem
                    color #606770
                    font-size .9rem
                .config-dialog-checkout
                    height 2rem
                    line-height 2rem
                    color #606770
                    font-size .9rem
                .config-dialog-space
                    height 2.5rem
                .config-dialog-btn
                    padding .7rem 3rem
                    background #409eff
                    border-radius 4px
                    color #fff
                    text-align center
                    cursor pointer
                    font-size 1.2rem
                    line-height 2rem
    .vx-config-group
        padding: 2rem 2rem;
        .vx-config-group-button
            padding: 1rem 2rem;
            border: 1px solid #dfe3ed;
            border-radius: 4px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            &:active
                opacity .6
        .vx-config-group-panel
            display flex
            flex-direction: column;
            border: 1px solid #dfe3ed;
            margin-top: 2rem;
            .vx-config-group-panel-icon
                display flex
                flex-direction: row;
                border-bottom: 1px solid #dfe3ed;
                justify-content: space-around;
                height: 3rem;
                align-items: center;
                div
                    flex 1
                    display: flex;
                    justify-content: space-around;
                    .vx 
                        width 1.5rem
                        height 1.5rem
                        cursor: pointer;
                        &:active
                            opacity .6
            .vx-config-group-panel-distribution
                display flex
                flex-direction: row;
                height: 3rem;
                justify-content: space-around;
                align-items: center;
                div
                    flex 1
                    display: flex;
                    justify-content: center;
                    cursor: pointer;
                    &:active
                        opacity .6
                .vx-config-group-panel-distribution-left
                    border-right: 1px solid #dfe3ed;
    .vx-config-svg
        padding: 1rem 2rem;
        .vx-config-svg-color
            display: flex;
            border: 1px solid #dfe3ed;
            flex-direction: column;
            border-radius: 4px;
            div
                padding: .5rem 1rem;
                ul
                    display: flex;
                    flex-direction: row;
                    flex-wrap: wrap;
                    li
                        width: 3rem;
                        height: 2rem;
                        background: #0dc7f1;
                        border-radius: 4px;
                        margin-left: .4rem;
                        margin-top: .4rem;
                        cursor: pointer;
        .vx-config-svg-button
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            margin-top: 2rem;
            div
                border: 1px solid #dfe3ed;
                padding: 0.8rem 1.5rem;
                cursor: pointer;
                border-radius: 4px;
                &:active
                    opacity .6
    .font-text-range
        display flex
        flex-direction row
        margin-top: 2rem;
        .font-range-input
            height 3rem
            width 100%
            line-height 3rem
            display flex
            border-radius 4px
            border 1px solid #dfe3ed
            font-size .9rem
            .font-range-value    
                flex 1
                height 3rem
                width 6rem
                text-align center
            .font-range-lable
                flex 1
                display flex
                justify-content center
            .font-range
                flex 2
                div
                .el-slider__runway
                    .el-slider__button-wrapper
                        z-index 1